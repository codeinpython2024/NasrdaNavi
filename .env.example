# NasrdaNavi Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED
# =============================================================================

# Mapbox Access Token
# Get yours at: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# =============================================================================
# OPTIONAL
# =============================================================================

# Flask Debug Mode
# Set to True for development (enables auto-reload and debug info)
# WARNING: Never enable in production!
FLASK_DEBUG=False

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# GeoJSON Data Files (override defaults if needed)
# ROADS_FILE=static/data/roads.geojson
# BUILDINGS_FILE=static/data/buildings.geojson
# FOOTPATH_FILE=static/data/Footpath.geojson
